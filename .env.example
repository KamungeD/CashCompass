# CashCompass Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ==========================================
# Backend Configuration
# ==========================================

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGO_URI=mongodb://localhost:27017/cashcompass
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/cashcompass

# Authentication
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRE=30d

# Security
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# Frontend Configuration
# ==========================================

# API Configuration
VITE_API_BASE_URL=http://localhost:5000/api
VITE_APP_NAME=CashCompass

# Features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true

# ==========================================
# Optional Services (for future enhancements)
# ==========================================

# Email Service (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# File Upload (optional)
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# Analytics (optional)
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
