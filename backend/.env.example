# Environment
NODE_ENV=development

# Server Configuration
PORT=5000
API_PREFIX=/api/v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/cashcompass
DB_NAME=cashcompass

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_very_long_and_secure_for_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_token_key_here_make_it_very_long_and_secure
JWT_REFRESH_EXPIRE=30d

# Security Configuration
BCRYPT_ROUNDS=12
EMAIL_VERIFICATION_SECRET=your_email_verification_secret_key_here
PASSWORD_RESET_SECRET=your_password_reset_secret_key_here
TOKEN_EXPIRE=1h
RESET_PASSWORD_EXPIRE=10m

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Email Configuration (for production)
# EMAIL_SERVICE=gmail
# EMAIL_USERNAME=your_email@gmail.com
# EMAIL_PASSWORD=your_app_password
# EMAIL_FROM_NAME=CashCompass
# EMAIL_FROM_ADDRESS=noreply@cashcompass.com

# File Upload Configuration
FILE_UPLOAD_PATH=./uploads
MAX_FILE_UPLOAD=5000000

# Application Configuration
APP_NAME=CashCompass
APP_VERSION=1.0.0
FRONTEND_URL=http://localhost:5173

# Test Configuration
DISABLE_RATE_LIMIT_TEST=true

# Logging
LOG_LEVEL=info
